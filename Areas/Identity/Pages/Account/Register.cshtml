@page
@model RegisterModel
@using Stock_keeping.Utility
@{
    Layout = "";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/css/style.css">

    <title>SignUp - Inventory</title>
</head>
<body>


    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2"></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row form-row align-items-center justify-content-center">
                    <div class="col-md-7">

                        <h1>Register to <strong>Inventory</strong></h1>
                        <p class="mb-4">Create a new account for your company.</p>

                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-4">
                            <h2>Create a new account.</h2>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.FirstName">FirstName</label>
                                <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="eg: John">
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.LastName">LastName</label>
                                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="eg: Doe">
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.Email">Email</label>
                                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="your-email@gmail.com">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.PhoneNumber">PhoneNumber</label>
                                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="eg: 08011223344">
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.Address">Address</label>
                                <input asp-for="Input.Address" class="form-control" aria-required="true" placeholder="eg: Address">
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.OrgName">OrganisationName</label>
                                <input asp-for="Input.OrgName" class="form-control" aria-required="true" placeholder="eg: inventory">
                                <span asp-validation-for="Input.OrgName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.Password">Password</label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Your Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.ConfirmPassword">Comfirm Password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Your Password">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button id="registerSubmit" type="submit" class="w-100 btn btn-block btn-primary">Register</button>
                            <a class="loginLinkBtn" asp-area="Identity" asp-page="/Account/Login">Already have an account? Sign In</a>
                        </form>

                        <section>
                            <h3>Use another service to register.</h3>
                            <hr />
                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {
                                    <div>
                                        <p>
                                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                                article
                                                about setting up this ASP.NET application to support logging in via external services
                                            </a>.
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in Model.ExternalLogins)
                                                {
                                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                }
                                            </p>
                                        </div>
                                    </form>
                                }
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
